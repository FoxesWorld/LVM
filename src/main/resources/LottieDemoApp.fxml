<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.foxesworld.LottieDemoApp">
    <stylesheets>
        <String fx:value="@/assets/css/video-slider.css"/>
    </stylesheets>
    <center>
        <Pane fx:id="lottieContainer" />
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Animation Controls"/>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button fx:id="btnPlay" prefWidth="50" prefHeight="50"/>
                        <Button fx:id="btnLoad" prefWidth="50" prefHeight="50"/>
                    </children>
                </HBox>
                <Slider fx:id="animationSlider" prefWidth="350" min="0" max="100" value="0" styleClass="video-slider"/>
            </children>
        </VBox>
    </bottom>
</BorderPane>
